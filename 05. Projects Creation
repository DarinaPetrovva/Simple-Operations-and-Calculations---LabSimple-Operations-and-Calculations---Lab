using System;

namespace zad2
{
    class Program
    {
        static void Main(string[] args)
        {
            string name = Console.ReadLine();
            int br = int.Parse(Console.ReadLine());
            int h = br * 3;
            Console.WriteLine("The architect "+ name + " will need" + h +" hours to complete " + br + " project/s." );
        }
    }
}
